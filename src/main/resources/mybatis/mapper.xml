<?xml version= "1.0" encoding ="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.ksmartech.holiday.mapper.MainMapper">

    <select id="getInfo" resultType="com.ksmartech.holiday.model.DetailHolidayDto">
        SELECT *
        FROM detail_holi
        WHERE emp_no = #{empNo}
    </select>

    <select id="getEmpInfo" resultType="com.ksmartech.holiday.model.HolidayDto">
        SELECT *
        FROM holi
        WHERE emp_no = #{empNo}
    </select>

    <select id="showEmpInfo" resultType="com.ksmartech.holiday.model.EmpDto">
        SELECT *
        FROM employee
        WHERE emp_no = #{empNo}
    </select>

    <update id="resignEmp">
        UPDATE employee
        SET state = '퇴사'
        WHERE emp_no = #{empNo}
    </update>
</mapper>

